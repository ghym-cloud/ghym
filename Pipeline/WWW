pipeline {
  agent any
  triggers {
    githubPush()
  }
  stages {
    stage('WWW') {
      steps {
        sh '''
         for f in $(git diff --name-only HEAD HEAD~1 | grep Website); do
          git checkout main
          git pull --all -f
          folder=$(echo $f | awk -F'/' '{print $2}')
          rsync -au --delete Website/$folder /var/www_data/$folder
         done
        '''
      }
    }
  }
}
